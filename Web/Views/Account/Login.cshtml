@using Web.Models.Account;
@using KO.Resources;

@model UserViewModel
@{
    ViewData["Title"] = Global.LogIn;
}

<link href="~/css/login.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript" src="~/js/general/login.js" asp-append-version="true"></script>
    <script type="text/javascript">
        vueAppParams.data.model =@Html.Raw(Model.ToJsonModel())
    </script>
}

<v-form ref="vueForm">
    <v-container class="text-center">
        <v-row>
            <v-card class="col-md-5 mx-auto" elevation="10" style="background:rgb(255,255,255,0.9);margin-top:3vh">
                <v-card-title class="d-block text-center">
                    <v-img class="mx-auto"
                           max-width="200"
                           src="@Url.Content("../images/LogoSelfResto.jpg")"></v-img>
                    <v-img class="mx-auto" max-height="150"
                           max-width="200"
                           src="@Url.Content("../images/NameSelfResto.png")"></v-img>
                </v-card-title>
                <v-divider></v-divider>
                <v-card-text>
                    <v-form>
                        <v-text-field outlined
                                      placeholder="Email"
                                      type="email"
                                      v-model="model.Email"></v-text-field>
                        <v-text-field outlined
                                      placeholder="Contraseña"
                                      type="password"
                                      v-model="model.Password"></v-text-field>
                    </v-form>
                </v-card-text>
                <v-divider></v-divider>
                <v-card-text class="text-center">
                    <v-btn large
                           color="red lighten-2"
                           :loading="submiting"
                           :disabled="submiting"
                           v-on:click="logIn">
                        {{jsglobals.Enter}}
                    </v-btn>
                </v-card-text>
            </v-card>
        </v-row>
    </v-container>
</v-form>

