<v-app-bar app
           dark
           style="background: linear-gradient(to top, #a54047, #bd6476, #a54047); ">
    <v-app-bar-nav-icon @@click.stop="drawer = !drawer"></v-app-bar-nav-icon>
    <v-spacer></v-spacer>
    <v-toolbar-title>
            <img style="background-color:rgba(255,255,255,0.8) !important;z-index:10" width="30%" class="rounded-lg offset-md-4 mt-2" src="~/images/SelfResto.jpg"/>
    </v-toolbar-title>
    <v-spacer></v-spacer>
    <v-toolbar-items>
        <v-row justify="center">
                <v-btn icon
                       @@click="closeSession()"
                       large
                       class="mt-4"
                       :disabled="submitting"
                       :loading="submitting">
                    <v-icon class="material-icons">
                        logout
                    </v-icon>
                </v-btn>
        </v-row>
    </v-toolbar-items>
</v-app-bar>

